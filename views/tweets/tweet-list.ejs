<% if(locals.tweets && tweets) { %>
    <% tweets.forEach((tweet) => { %>
        <div class="card tweet-element">
            <div class="card-body d-flex flex-column">
                <div class="d-flex flex-row justify-content-center">
                    <img width="50" height="50" class="pr-2 img-fluid" src="<%= tweet.author.avatar %>">
                    <span class="flex-fill"><%= tweet.author.username %></span>
                    <% if (editable && tweet.author._id.toString() === currentUser._id.toString()) {%>
                        <div class="flex-flex-row justify-content-center">
                            <a href="/tweets/edit/<%= tweet._id %>" class="fas fa-edit pr-2 text-success"></a>
                            <i class="fas fa-minus-circle text-danger pointer-cursor" tweetid=<%= tweet._id %>></i>
                        </div>
                    <% } %>
                </div>
                <div class="mt-3"> <%= tweet.content %> </div>
            </div>
        </div>
    <% }) %>
    </ul>
<% } %>