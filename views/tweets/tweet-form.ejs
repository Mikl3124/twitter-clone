<%- include('../layout.ejs') %>

<div class="d-flex flex-row content mx-auto">
    <div class="profile-container">
        <%- include('../includes/profile.ejs') %>
    </div>
    <div class="flex-fill">
        <form class="card" method="post" action= "<%= tweet.id ? '/tweets/update/' + tweet._id  : '/tweets' %>">
            <div class="card-header">
                Ecrire un Tweet
                <div class="card-body">
                    <div class="form-group">
                        <textarea class="form-control" placeholder="What is happening" name="content" id="" cols="30" rows="10"><%= tweet.content %></textarea>
                        <% if(locals.errors && errors) { %>
                            <ul>
                                <% errors.forEach((error) => { %>
                                    <li class="text-danger"><%= error %> </li>
                                <% }) %>
                            </ul>
                        <% } %>
                    </div>
                    <div class="w-100">
                        <input type="submit" value="Send" class="btn btn-primary ml-auto d-block">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div> 